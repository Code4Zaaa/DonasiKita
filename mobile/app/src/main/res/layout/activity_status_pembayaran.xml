<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".activities.StatusPembayaranActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cerulean_50"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/cerulean_50"
            app:navigationIcon="@drawable/ic_arrow_back_white"
            app:title="Donasi"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="12dp"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menunggu pembayaran"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_status_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Segera lakukan pembayaran sebelum"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_payment_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Juli 2025 - 21:40"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="-5dp"/>

            <TextView
                android:id="@+id/tv_payment_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat instruksi pembayaran"
                android:textColor="@color/primary_color"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:drawablePadding="8dp"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:visibility="visible"
                app:drawableEndCompat="@drawable/ic_arrow_right"
                app:drawableTint="@color/primary_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/payment_details_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="Tanggal"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="25 Juli 2025 - 21:26"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="Metode pembayaran"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_payment_method"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="QRIS"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="ID donasi"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_donation_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="#208350357"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textColor="@color/cerulean_70"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:background="@drawable/status_success_background"
                            android:paddingHorizontal="25dp"
                            android:paddingVertical="3dp"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginBottom="6dp"
            android:paddingHorizontal="13dp"
            android:paddingVertical="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total donasi"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_total_donation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp1.000"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nominal donasi"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_nominal_donation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp1.000"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
