<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCampaignImage"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small">

            <TextView
                android:id="@+id/tvCampaignTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                tools:text="Bantuan Pendidikan untuk Anak Kurang Mampu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCurrentDonation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"
                    tools:text="Rp 15.000.000" />

                <TextView
                    android:id="@+id/tvProgressPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small"
                    tools:text="75%" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBarDonation"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="@dimen/spacing_small"
                android:progressTint="@color/progress_filled"
                android:progressBackgroundTint="@color/progress_background"
                tools:progress="75" />

            <TextView
                android:id="@+id/tvDaysLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/warning_color"
                android:textSize="@dimen/text_size_small"
                tools:text="15 hari lagi" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>