<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".activities.MetodePembayaranActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="2dp"
        app:navigationIcon="@drawable/ic_arrow_back_black"
        app:navigationIconTint="@color/text_primary"
        app:title="Metode pembayaran"
        app:titleTextColor="@color/text_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="32dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/paymentMethodsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pembayaran instan (verifikasi otomatis, minimal nominal donasi Rp1.000)"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="16dp"
                        android:background="@color/surface_color" />

                    <LinearLayout
                        android:id="@+id/instantPaymentContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:divider="@drawable/divider_line"
                        android:showDividers="middle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Virtual account (verifikasi otomatis, minimal nominal donasi Rp10.000)"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="16dp"
                        android:background="@color/surface_color" />

                    <LinearLayout
                        android:id="@+id/virtualAccountContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:divider="@drawable/divider_line"
                        android:showDividers="middle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transfer bank (verifikasi manual 1x24 jam, minimal nominal donasi Rp10.000)"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="16dp"
                        android:background="@color/surface_color" />

                    <LinearLayout
                        android:id="@+id/bankTransferContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:divider="@drawable/divider_line"
                        android:showDividers="middle" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>